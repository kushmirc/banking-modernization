# deployment.config
# Simple configuration file for deployment scripts
# Source this file in scripts: source deployment.config

# Application settings
APP_NAME="banking-modern"
APP_PORT="8081"
JAR_NAME="banking-modern-0.0.1-SNAPSHOT.jar"

# Directories
APP_DIR="/opt/banking-modern"
BACKUP_DIR="/opt/backups/banking-modern"
